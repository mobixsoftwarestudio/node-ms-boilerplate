{
  "name": "node-ms-boilerplate",
  "version": "1.0.0",
  "main": "src/server.ts",
  "license": "MIT",
  "scripts": {
    "build": "npm run build-ts",
    "build-ts": "tsc",
    "dev": "export NODE_ENV=development && nodemon src/server.ts",
    "serve": "export NODE_ENV=production && node dist/server.js",
    "start": "npm run serve",
    "test": "export NODE_ENV=test && jest",
    "test-watch": "export NODE_ENV=test && jest --watch",
    "test-ci": "export NODE_ENV=test && jest --coverage --coverageDirectory=output/coverage/jest"
  },
  "dependencies": {
    "@mobixtec/visse": "^1.1.7",
    "@sentry/node": "5.13.0",
    "@types/express-validator": "^3.0.0",
    "@types/helmet": "^0.0.48",
    "@types/mongodb-memory-server": "^2.3.0",
    "@types/mongoose": "^5.7.36",
    "body-parser": "^1.19.0",
    "chalk": "^3.0.0",
    "date-fns": "^2.16.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.6.1",
    "flatted": "^3.1.0",
    "helmet": "^4.1.1",
    "jsonwebtoken": "^8.5.1",
    "kafkajs": "^1.12.0",
    "lodash": "^4.17.15",
    "mongodb-memory-server": "^6.7.5",
    "mongoose": "^5.9.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "@sucrase/jest-plugin": "^2.0.0",
    "@types/express": "4.17.8",
    "@types/jest": "^25.1.3",
    "@types/lodash": "^4.14.149",
    "@types/passport": "^1.0.2",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/sequelize": "^4.28.8",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "jest-junit": "^10.0.0",
    "lint-staged": "^10.0.8",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "sequelize-cli": "^5.5.1",
    "sucrase": "^3.12.1",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.2"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      ".(js|jsx|ts|tsx)": "@sucrase/jest-plugin"
    },
    "testMatch": [
      "**/__tests__/*.+(ts|js)"
    ],
    "coverageReporters": [
      "text",
      "cobertura"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "git diff HEAD --quiet && yarn test"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "npx prettier --write",
      "eslint --ext .ts,.js, src/"
    ]
  },
  "jest-junit": {
    "outputDirectory": "./output/report/junit/",
    "outputName": "junit.xml",
    "usePathForSuiteName": "true"
  }
}
